@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio";
}


<section>
    <div class="row align-items-center py-lg-6">
        <div class="col-lg-6">
            <div class="shadow mb-4">
                <div class="d-flex position-relative">
                    <img src="/Imagens/IMG_0833.jpg" class="flex-shrink-0 me-3 rounded" alt="fotoinicial" style="height: 250px;">
                    <div>
                        <h5 class="mt-0">Gustavo Vilela Dos Santos</h5>
                        <p>
                            Recém Formado Tecnólogo em Análise e Desenvolvimento de Sistema,
                            na Universidade Nove de Julho irei deixar ao lado minha Soft Skills.
                            <br>
                            Como profissional, sou extremamente dedicado e comprometido com o
                            sucesso do meu trabalho. Sou capaz de trabalhar em equipe e colaborar com
                            pessoas de diferentes origens e perspectivas. Além disso, estou sempre
                            buscando maneiras de melhorar meu desempenho e aumentar meu
                            conhecimento.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Clica Aqui!
            </button>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">SolfSkitlls</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label for="file">Desenvolvimento de sistemas:</label>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar" role="progressbar" style="width: 70%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">70%</div>
                        </div>
                        <br>
                        <label for="file">Resolução de problemas:</label>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar" role="progressbar" style="width: 90%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
                        </div>
                        <br>
                        <label for="file">GitHub:</label>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar" role="progressbar" style="width: 90%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
                        </div>
                        <br>
                        <label for="file">C#:</label>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar" role="progressbar" style="width: 65%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
                        </div>
                        <br>
                        <label for="file">.NET Framework:</label>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar" role="progressbar" style="width: 60%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
                        </div>
                        <br>
                        <label for="file">SQL:</label>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar" role="progressbar" style="width: 60%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">60%</div>
                        </div>
                        <br>
                        <label for="file">Desenvolvimento web:</label>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar" role="progressbar" style="width: 85%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">850%</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>


